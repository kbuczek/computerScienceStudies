<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center; margin-top: 40px;">Add a New Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input  class="form-control" type="text" placeholder="name" name="name">
            </div>
            <div class="form-group">
                <input  class="form-control" type="number" placeholder="price per night" name="price" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="image url" name="image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>